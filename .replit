entrypoint = "bash -lc 'pip install -r requirements.txt && python3 main.py'"
modules   = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["bash", "cargo", "libiconv", "libxcrypt", "rustc"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run             = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80
