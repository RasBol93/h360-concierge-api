run = "uvicorn main:app --host 0.0.0.0 --port 8000"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["azure-functions-core-tools", "bash", "cargo", "libiconv", "libxcrypt", "rustc", "zip"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 7071
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80

